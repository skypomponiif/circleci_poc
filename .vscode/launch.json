{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current file w/ mocha",
      "runtimeVersion": "14.17.0",
      "env": {
        "NODE_ENV": "local"
      },
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--ui",
        "bdd",
        "--no-timeout",
        "--colors",
        "--require",
        "ts-node/register",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
